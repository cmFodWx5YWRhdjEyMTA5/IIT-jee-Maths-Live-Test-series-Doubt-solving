<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_view_submission"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:background="@drawable/boarder_line_background"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/part1Linear_submission"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/userImageLayout_submission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/userImageCard_submission"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:elevation="100dp"
                app:cardCornerRadius="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/userImage_submission"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/progress_bar_user_image_submission"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:indicatorName="BallScaleMultipleIndicator" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/textLayout_submission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/textCard_submission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:elevation="100dp"
                app:cardCornerRadius="10dp"
                android:background="@color/line_background"
                android:backgroundTint="@color/line_background"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:background="@color/line_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/user_name_submission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        tools:text="Naresh king "
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:singleLine="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_text_view" />

                    <ImageView
                        android:id="@+id/report_bar"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:layout_marginRight="@dimen/small_margin"
                        android:src="@drawable/ic_action_overflow"
                        android:background="@color/line_background" />

                    <com.apradanas.simplelinkabletext.LinkableTextView
                        android:id="@+id/text_submission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name_submission"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginLeft="@dimen/right_margin_card"
                        tools:text="@string/item_desc"
                        android:ellipsize="end"
                        android:singleLine="false"
                        android:textIsSelectable="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text_view" />


                    <RelativeLayout
                        android:id="@+id/solutionImageLayout_submission"
                        android:layout_below="@id/text_submission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/right_margin_card">

                        <ImageView
                            android:id="@+id/solutonImage_submission"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:src="@drawable/home"
                            android:background="@color/whitegray" />

                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/part3_submission"
                android:layout_below="@+id/textCard_submission"
                android:background="@drawable/boarder_line_background"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/part3Linear_submission"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RelativeLayout
                        android:id="@+id/voteLayout_submission"
                        android:layout_width="wrap_content"
                        android:maxWidth="@dimen/md_keylines"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/md_keylines"
                        android:layout_marginRight="@dimen/md_keylines"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/voteText_submission"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/likes"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/article_subheading" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/upvoteLayout_submission"
                        android:layout_toRightOf="@id/voteLayout_submission"
                        android:layout_width="wrap_content"
                        android:maxWidth="@dimen/md_keylines"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/upvoteImage_submission"
                            android:layout_width="@dimen/comments"
                            android:layout_height="@dimen/comments"
                            android:backgroundTint="@color/white"
                            android:tint="@color/black"
                            android:layout_marginRight="@dimen/small_margin"
                            android:src="@drawable/ic_action_up_arrow"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/upvoteText_submission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/upvote"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/article_subheading" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/downvoteLayout_submission"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/upvoteLayout_submission"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/downImage_submission"
                            android:layout_width="@dimen/comments"
                            android:layout_height="@dimen/comments"
                            android:backgroundTint="@color/white"
                            android:tint="@color/black"
                            android:layout_marginLeft="@dimen/md_keylines"
                            android:layout_marginRight="@dimen/small_margin"
                            android:src="@drawable/ic_action_down_arrow"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/downText_submission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/downvote"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/article_subheading" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/replyLayoutsub_submission"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:layout_marginRight="@dimen/md_keylines"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/replyImagesub_submission"
                            android:layout_width="@dimen/comments"
                            android:layout_height="@dimen/comments"
                            android:backgroundTint="@color/white"
                            android:tint="@color/black"
                            android:layout_marginLeft="@dimen/md_keylines"
                            android:layout_marginRight="@dimen/small_margin"
                            android:src="@drawable/ic_action_comments"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/replyTextsub_submission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/reply"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/article_subheading" />
                        <TextView
                            android:id="@+id/editTextsub_submission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@string/edit"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/article_subheading" />

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

