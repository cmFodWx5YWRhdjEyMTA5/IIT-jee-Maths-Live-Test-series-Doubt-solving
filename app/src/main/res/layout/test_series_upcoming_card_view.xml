<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="@drawable/boarder_line_background"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        android:background="@drawable/boarder_line_background"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fui_transparent"
            android:background="@drawable/boarder_line_background"
            android:orientation="vertical"
            android:id="@+id/part1">
            <TextView
                android:id="@+id/test1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="@dimen/right_margin_card"
                android:layout_marginBottom="@dimen/small_margin"
                tools:text="@string/test"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text_view" />

            <TextView
                android:id="@+id/topicNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_toRightOf="@+id/test1"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginRight="@dimen/md_keylines"
                tools:text="@string/number"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text_view" />
            <TextView
                android:id="@+id/editUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/small_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                tools:text="@string/edit"
                android:visibility="gone"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text_view" />

            <TextView
                android:id="@+id/conceptTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topicNum"
                android:layout_toLeftOf="@+id/attempt_Button"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginBottom="@dimen/right_margin_card"
                tools:text="@string/item_desc"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_view" />

            <Button
                android:id="@+id/attempt_Button"
                android:layout_width="@dimen/date"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/black"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:shadowColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/blue"
                android:textAllCaps="false"
                android:text="@string/attempt"/>

        </RelativeLayout>

        <View
            android:id="@+id/parttemp"
            android:layout_width="match_parent"
            android:layout_below="@+id/part1"
            android:background="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parttemp">
            <LinearLayout
                android:id="@+id/part2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <TextView
                    android:id="@+id/questionsval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginLeft="@dimen/md_keylines"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tag_size" />
                <TextView
                    android:id="@+id/questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tag_size" />

                <View
                    android:layout_width="1dp"
                    android:background="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/right_margin_card"/>
                <TextView
                    android:id="@+id/marksval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tag_size" />
                <TextView
                    android:id="@+id/marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/marks"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tag_size" />
                <View
                    android:layout_width="1dp"
                    android:background="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/right_margin_card"/>
                <TextView
                    android:id="@+id/timeval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tag_size" />
                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timem"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tag_size" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
